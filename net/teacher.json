{
    "loopSleepMcs"    :2000000,
    "io":
    {
        "source"            :"SERVER",
        "net"               :"net/net.json",
        "host"              :"127.0.0.1",
        "port"              :11120
   },

    "tasks":
    {
        "TASK_TEACHER":
        {
            "enabled"               :true,
            "loopSleepMcs"          :1000000,
            "idErrorLayer"          :"error",
            "errorLimit"            :0.01,
            "batches":
            [
                [
                    { "cmd":"VALUE_TO_LAYER", "layer": "sample", "min": 0.0, "max":0.0 },
                    { "cmd":"VALUE_TO_LAYER", "layer" : "retina", "min" : 0.0, "max" : 1.0 }
                ],

                [
                    {
                        "cmd":"IMAGE_TO_LAYER",
                        "layer" : "retina",
                        "files" :
                        [
                            "./patterns/cat00001.png",
                            "./patterns/cat00002.png",
                            "./patterns/cat00003.png",
                            "./patterns/cat00004.png"
                        ]
                    },
                    { "cmd":"IMAGE_TO_LAYER", "layer": "sample", "files": [ "./patterns/cat00001.png" ]}
                ],

                [
                    { "cmd":"IMAGE_TO_LAYER", "layer": "retina", "files":[ "./patterns/tree00001.png" ]},
                    { "cmd":"IMAGE_TO_LAYER", "layer": "sample", "files": ["./patterns/tree00001.png" ]}
                ],

                [
                    { "cmd":"FOLDER_TO_LAYER",  "layer": "retina", "folder" : "./patterns/digit1" },
                    { "cmd":"IMAGE_TO_LAYER",   "layer": "sample", "files": ["./patterns/digit1/digit1-00001.png" ]}
                ],

                [
                    { "cmd":"FOLDER_TO_LAYER",  "layer": "retina", "folder": "./patterns/digit2" },
                    { "cmd":"IMAGE_TO_LAYER",   "layer": "sample", "files": ["./patterns/digit2/digit2-00001.png" ]}
                ]
            ]
        }
    }
}
