{
    "loopSleepMcs"    :100000,
    "io":
    {
        "source"            :"SERVER",
        "net"               :"net/net.json",
        "host"              :"127.0.0.1",
        "port"              :11120,

        "default":
        {
            "source"            :"SERVER",
            "net"               :"net/net.json",
            "host"              :"127.0.0.1",
            "port"              :11120
        }
    },

    "tasks":
    {
        "TASK_TEACHER":
        {
            "enabled"               :true,
            "loopSleepMcs"          :1000000,
            "idErrorLayer"          :"error",
            "errorLimit"            :0.01,
            "mode"                  :"learning",
            "batches":
            {
                "work":
                [
                    [
                        { "cmd":"VALUE_TO_LAYER", "layer": "error", "min":0.0, "max":0.0 },
                        { "cmd":"FOLDER_TO_LAYER", "layer": "retina", "folder": "./patterns/test" },
                        { "cmd":"VALUE_TO_LAYER", "layer": "sample", "layer": "sample", "min": 0.0, "max":0.0 },
                    ]
                ],
                "learning":
                [
                    [
                        { "cmd":"VALUE_TO_LAYER", "io":"default", "layer": "error", "min": 1.0, "max":1.0 },
                        { "cmd":"VALUE_TO_LAYER", "io":"default", "layer": "sample", "min": 0.0, "max":0.0 },
                        { "cmd":"VALUE_TO_LAYER", "io":"default", "layer": "retina", "min" : 0.0, "max" : 1.0 }
                    ],

                    [
                        { "cmd":"VALUE_TO_LAYER", "layer": "error", "min": 1.0, "max":1.0 },
                        { "cmd":"FOLDER_TO_LAYER","layer": "retina", "folder" : "./patterns/cat" },
                        { "cmd":"IMAGE_TO_LAYER", "layer": "sample", "files":[ "./patterns/cat/cat00001.png" ] }
                    ],

                    [
                        { "cmd":"VALUE_TO_LAYER", "layer": "error", "min":1.0, "max":1.0 },
                        { "cmd":"IMAGE_TO_LAYER", "layer": "retina", "files":[ "./patterns/tree00001.png" ] },
                        { "cmd":"IMAGE_TO_LAYER", "layer": "sample", "files":[ "./patterns/tree00001.png" ] }
                    ],

                    [
                        { "cmd":"VALUE_TO_LAYER", "layer": "error", "min":1.0, "max":1.0 },
                        { "cmd":"FOLDER_TO_LAYER","layer": "retina", "folder" : "./patterns/digit1" },
                        { "cmd":"IMAGE_TO_LAYER", "layer": "sample", "files" :[ "./patterns/digit1/digit1-00001.png" ] }
                    ],

                    [
                        { "cmd":"VALUE_TO_LAYER", "layer": "error", "min":1.0, "max":1.0 },
                        { "cmd":"FOLDER_TO_LAYER","layer": "retina", "folder" : "./patterns/digit2" },
                        { "cmd":"IMAGE_TO_LAYER", "layer": "sample", "files" :[ "./patterns/digit2/digit2-00001.png" ] }
                    ]
                ]
            }
        }
    }
}
